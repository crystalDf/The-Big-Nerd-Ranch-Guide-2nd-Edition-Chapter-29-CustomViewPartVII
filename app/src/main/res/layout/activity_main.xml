<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context=".MainActivity"
              android:orientation="vertical">

    <com.star.customviewpartvii.CustomVolumeControlBar
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:firstColor="#FF0000"
        app:secondColor="#00FF00"
        app:circleWidth="20dp"
        app:dotCount="10"
        app:spliteArcSize="20"
        app:image="@drawable/bubble"/>

    <com.star.customviewpartvii.CustomVolumeControlBar
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:firstColor="#000000"
        app:secondColor="#FFFFFF"
        app:circleWidth="10dp"
        app:dotCount="20"
        app:spliteArcSize="10"
        app:image="@drawable/tmntraph"/>

</LinearLayout>
